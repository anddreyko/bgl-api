{
    "name": "anddreyko/bgl-api",
    "type": "project",
    "authors": [
        {
            "name": "anddreyko"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "soft-packages": true
    },
    "require": {
        "php": "^8.2",
        "symfony/console": "^6.0",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "ext-json": "*",
        "doctrine/orm": "^2.14",
        "laminas/laminas-config-aggregator": "^1.13"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "overtrue/phplint": "^9.0",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^5.8",
        "phpstan/phpstan": "^1.10",
        "codeception/codeception": "^5.0",
        "codeception/module-phpbrowser": "*",
        "codeception/module-asserts": "*"
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "test": "codecept run"
    }
}
