{
    "name": "anddreyko/bgl-api",
    "type": "project",
    "authors": [
        {
            "name": "anddreyko"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "soft-packages": true
    },
    "require": {
        "php": "^8.2",
        "symfony/console": "^6.0",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "overtrue/phplint": "^9.0",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^5.8",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "phpstan": "phpstan"
    }
}
