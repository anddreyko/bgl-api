<?xml version="1.0" ?>
<ruleset name="App Code Style">
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="cache" value="./var/.phpcs.cache.json"/>

    <rule ref="PSR12">
        <type>warning</type>
    </rule>

    <file>config</file>
    <file>console</file>
    <file>src</file>
    <file>web</file>

    <exclude-pattern>web/assets</exclude-pattern>
</ruleset>
